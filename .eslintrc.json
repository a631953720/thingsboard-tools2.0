{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true,
        "node": true
    },
    "extends": ["airbnb-base", "eslint:recommended", "prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "jest", "prettier"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 150,
                "tabWidth": 4,
                "endOfLine": "lf",
                "arrowParens": "always"
            }
        ]
    }
}
